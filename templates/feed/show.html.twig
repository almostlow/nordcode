{% extends 'base.html.twig' %}

{% block title %}Feed{% endblock %}

{% block body %}
	<h1>Feed</h1>
    <table class="table">
      <thead>
	      <th>Title</th>
	      <th>Author</th>
	      <th>Summary</th>
	      <th>Updated</th>
	      <th>Action</th>
      </thead>
      <tbody>
	      {% for entry in feeds %}
	      	<tr>
		      	<td>{{ entry.title|raw }}</td>
		      	<td>{{ entry.author }}</td>
		      	<td>{{ entry.summary|raw }}</td>
		      	<td>{{ entry.updated }}</td>
		      	<td><a target="_blank" href="{{ entry.link }}">Read more </a></td>
	        </tr>
	      {% endfor %}
      </tbody>
    </table>
{% endblock %}